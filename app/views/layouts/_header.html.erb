<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to '<b>STPK</b>AHP'.html_safe, root_path, class: 'navbar-brand' %>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li class = "<%= 'active' if controller?('welcome')%>"><%= link_to 'Home', root_path %></li>
          <li class = "<%= 'active' if controller?('alternatives')%>"><%= link_to 'Alternatif', alternatives_path %></li>
          <li class = "<%= 'active' if controller?('criterions', 'alternative_criterion_comparisons')%>"> <%= link_to 'Kriteria', criterions_path %></li>
          <li class = "<%= 'active' if controller?('criterion_comparisons')%>"><%= link_to 'Banding Kriteria', criterion_comparisons_path %></li>
        </ul>
      </div>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <% if user_signed_in? %>
            <%= link_to current_user.email %>
            <% else %>
            <a href="#">Visitor</a>
            <% end %>
          </li>
          <li class="dropdown user user-menu">
            <% if user_signed_in? %>
            <%=  link_to '', destroy_user_session_path, method: :delete, class: "fa fa-sign-out" %>
            <% else %>
            <%=  link_to '', new_user_session_path, class: "fa fa-sign-in" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
