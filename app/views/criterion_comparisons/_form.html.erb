<hr>
<%= form_for @cc, :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <%= render "shared/errors", object: @cc %>
  <div class="form-group">
    <%= f.label :criterion_id, "Nama Kriteria 1 :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :criterion_id, class: "form-control select2" %>
      </div>
  </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <%= f.label :comparison, "Perbandingan :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.number_field :comparison, class: "form-control select2" %>
      </div>
  </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <%= f.label :other_criterion_id, "Nama Kriteria 2 :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :other_criterion_id, class: "form-control select2" %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= f.submit "Selanjutnya", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
