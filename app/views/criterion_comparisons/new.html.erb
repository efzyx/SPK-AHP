<% @nowCri = @curretCri %>
<% if @nowCri[1] == nil %>
  <div class="callout callout-info">
    <h4>Selamat!</h4>

    <p>Perbandingan Kriteria sudah lengkap!</p>
  </div>
  <%= link_to 'Kembali', criterion_comparisons_path, class: 'btn btn-info' %>
<% else %>
<%= render 'form' %>
<% end %>

<hr>
<% @url = alternatives_url %>
<% @aksi = "Perbandingan" %>
<% @objek = "Kriteria" %>
<hr>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Kriteria 1</th>
                <th>Banding</th>
                <th>Kriteria 2</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% nomor = 1 %>
              <% @ccs.each do |c| %>
              <tr>
                <td><%= nomor %></td>
                <td><%= c.criterion.name %></td>
                <td><%= c.comparison %></td>
                <td><%= c.other_criterion.name %></td>
                <td><%= link_to 'Ubah', edit_criterion_comparison_path(c), class: 'btn btn-warning' %>
                    &emsp;
                   <%= link_to 'Hapus', c, method: :delete, class: 'btn btn-danger' %></td>
                <td></td>
              </tr>
              <% nomor+=1 %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
