<% if flash[:notice] %>
  <div class="callout callout-info">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="callout callout-danger">
    <p><%= flash[:warning] %></p>
  </div>
<% end %>
<% @url = criterion_comparisons_url %>
<% @aksi = "Normalisasi" %>
<% @objek = "Kriteria" %>
<%= link_to 'Lengkapi Perbandingan', new_criterion_comparison_path, class: 'btn btn-primary pull-right' %>
<hr>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <% @kriteria.each do |k|%>
                <th><%= k.name %></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @j = @kriteria.first %>
                <% @data.each do |d| %>
                <tr>
                  <th><%= @j.name %></th>
                  <% d.each do |dd| %>
                    <td><%= dd.round(3) %></td>
                    <% end %>
                </tr>
                <% @j = @j.next %>
                <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th><i><font color="red">Jumlah</font></i></th>
                <% @sumFix.each do |s| %>
                <th><i><font color="red"><%= s.round(3) %></font></i></th>
                <% end %>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
<hr>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <% @kriteria.each do |k|%>
                <th><%= k.name %></th>
                <% end %>
                <th>Rata-rata</th>
              </tr>
            </thead>
            <tbody>
              <% @j = @kriteria.first %>
                <% @normalFix.each_with_index do |nf, inde| %>
                <tr>
                  <th><%= @j.name %></th>
                  <% nf.each do |n| %>
                    <td><%= n.round(3) %></td>
                    <% end %>
                    <th><%= @average[inde].round(3) %></th>
                </tr>
                <% @j = @j.next %>
                <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th><i><font color="red">Jumlah</font></i></th>
                <% @sumNormalFix.each do |s| %>
                <th><i><font color="red"><%= s.round(3) %></font></i></th>
                <% end %>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
