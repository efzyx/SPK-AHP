<hr>
<%= form_for @alternative, :html => {:class => "form-horizontal form-label-left"} do |f| %>
  <%= render "shared/errors", object: @alternative %>
  <div class="form-group">
    <%= f.label :name, "Nama Alternatif :", class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, { autofocus: :true, class: "form-control select2" } %>
      </div>
  </div>
  <div class="ln_solid"></div>

  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Kembali', @url, class: 'btn btn-danger' %>
      <%= f.submit "Simpan", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
